@using RogueFit.ViewModels
@model TagViewModel

<!DOCTYPE html>
<html lang="eng">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/tagCreate.css" />
    <title>Tag Create</title>
</head>
<body>
    <main>
        <h4>Create Tag</h4>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" ></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedSubCategoryId">SubCategory</label>
                <select asp-for="SelectedSubCategoryId" asp-items="Model.SubCategories" class="form-control">
                    <option value="">- Select SubCategory -</option>
                </select>
                <span asp-validation-for="SelectedSubCategoryId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </main>
    <footer></footer>
</body>
</html>